<h1>Edit This Portfolio Item</h1>

<%= form_for(@portfolio_item) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :blog_title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, id: :blog_title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, id: :blog_body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
